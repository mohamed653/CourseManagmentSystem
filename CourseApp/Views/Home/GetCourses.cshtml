@{
}
<table class="table table-border table-hover ">
    <tr>
        <th>Id</th>
        <th>Course Name</th>
        <th>CreationDate</th>
        <th>Category Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
        	<td>@item.Id</td>
        	<td>@item.Name</td>
        	<td>@item.CreationDate</td>
        	<td></td>
        </tr>
    }
</table>
